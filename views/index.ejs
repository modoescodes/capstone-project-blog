<%- include('partials/header.ejs') %>
<link href="../public/styles/main.css" rel="stylesheet">
<style>
    /* Flexbox layout on body */
    html, body {
      height: 100%;
      display: flex;
      flex-direction: column;
    }

    /* Content fills available space, making room for footer */
    .content {
      flex: 1;
      padding: 20px;
      overflow-y: auto;
    }

    /* Footer is always at the bottom */
    footer {
      text-align: center;
      padding: 10px;
    }
</style>


<div class="content" style="background-image:linear-gradient(to right, rgba(255,0,0,0), beige);">
    <div class="px-4 py-5 my-3 text-center">
        <h1 class="display-5 fw-bold text-body-emphasis">Productivity Hacks For Everyday Life</h1>
        <div class="col-lg-6 mx-auto">
            <p class="lead mb-4">Explore essential productivity hacks designed to enhance your daily life. This blog offers practical strategies for better time management, improved focus, and efficient task prioritization to boost your overall productivity. Hence, feel free to add your tips here.</p>
            <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                <form action="/add" method="GET">
                    <input class="btn btn-outline-info btn-lg px-4 gap-3" type="submit" value="Add your tip">
                </form>
            </div>
        </div>
    </div>

    <div class="row" data-masonry="{&quot;percentPosition&quot;: true }" style="position: relative; height: auto;">
        <% cards.forEach(card=>{ %>
            <div class="col-sm-6 col-lg-4 mb-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title"><%= card.title %></h5>
                        <p class="card-text"><%= card.description %></p>
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <form action="/edit/<%= card.id %>" method="GET">
                                <input class="btn mx-3" type="submit" value="🖊️">
                            </form>
                            <form action="/delete/<%= card.id %>" method="POST">
                                <input class="btn" type="submit" value="🗑️">
                            </form>
                        </div>
                            
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<%- include('partials/footer.ejs') %>

